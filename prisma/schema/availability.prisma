model Availability {
  id String @id @default(uuid())
  tutorId String
  day    WeekDay
  startTime String
  endTime String
  status  AvailabilityStatus @default(AVAILABLE)

  tutor TutorProfiles @relation(fields: [tutorId],references: [id],onDelete: Cascade)
  booking Booking[]

  @@index([tutorId])
  @@map("availability")

  
 }

enum AvailabilityStatus  {
  AVAILABLE
  BOOKED
}



 enum WeekDay {
  MONDAY
  TUESDAY
  WEDNESDAY
  THURSDAY
  FRIDAY
  SATURDAY
  SUNDAY
}